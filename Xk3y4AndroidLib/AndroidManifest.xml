<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xk3y.dongle.android"
    android:versionCode="5"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="Xk3y4AndroidApplication">
                
        <activity android:name=".Xk3y4AndroidActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ihm.theme.ListGamesActivity"
		    android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
			</intent-filter>
		</activity>
		<activity android:name=".ihm.theme.CoverFlowGamesActivity"
		    android:configChanges="orientation">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
			</intent-filter>
		</activity>
		<activity android:name=".ihm.GameDetailsActivity">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
			</intent-filter>
		</activity>
		<activity android:name=".ihm.SettingsActivity"
		    android:windowSoftInputMode="stateHidden">"
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
			</intent-filter>
		</activity>
    </application>
    <receiver android:name=".widget.XkeyWidgetProvider" >
         <intent-filter >
             <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
         </intent-filter>
         <meta-data android:name="android.appwidget.provider" android:resource="@xml/xkeywidget" />
     </receiver>
     <receiver android:name=".widget.XkeyWidgetIntentReceiver"  android:label="widgetBroadcastReceiver" >
		 <intent-filter>
		      <action android:name="pl.looksok.intent.action.CHANGE_PICTURE" />
		 </intent-filter>
	 	<meta-data android:name="android.appwidget.provider"  android:resource="@xml/xkeywidget" />
	</receiver>
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE" />
</manifest>